{% extends "back_layout.twig" %}
{% block head %}
  <title>Aggiungi un servizio</title>
{% endblock %}

    <div class="ftco-blocks-cover-1">
        <div class="ftco-cover-1" style="background-image: url('images/hero_1.jpg');">
            <div class="container">
              <div class="row align-items-center justify-content-center">
                <div class="col-lg-12 text-center">
                   <div class="box-92819">
                    <h1 class="text-uppercase text-black mb-3">Aggiungi un Servizio</h1>
                    <p class="mb-0">Usa il formulario qui in basso per aggiungere un servizio</p>
                  </div>
                </div>
                  <form action="../public/index.php?action=addService" method="post" enctype="multipart/form-data">
                    <label for="image">Aggiungi un nuovo servizio</label>
                    <input type="file" name="image" accept="image/*" id="image">
                    <label for="title">Titolo</label>
                    <input type="text" name="title" id="title">
                    <label for="content">Descrizione</label>
                    <textarea name="content" id="content"></textarea>
                      <input type="submit" value="Aggiungi Servizio" name="submit">
                  </form> 
                </div>
            </div>
        </div>
      </div>

{% endblock %}