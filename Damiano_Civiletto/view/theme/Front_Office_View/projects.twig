{% extends "front_layout.twig" %}
{% block head %}
  <title>Progetti</title>
{% endblock %}
{% block content %}
  <div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1" style="background-image: url('images/progetto_casa_caccamo.jpg');">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-lg-12 text-center">
            <div class="box-92819">
              <h1 class="text-uppercase text-black mb-3">Progetti</h1>
              <p class="mb-0">Sfoglia la selezione dei progetti</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="site-section">
    <div class="container">
      <div class="row">
        {% for project in projects %}
          <div class="col-lg-6" data-aos="fade-up" data-aos-delay="">
            <div class="media-02819">
              <a href="showSingleProject-{{ project.id }}" class="img-link small" style="text-align: center"><img src="img/projects_images/{{ project.file_name }}" alt="Image" class="img-md-fluid" style="max-height: 100%; max-width: 100%; text-align: center"></a>
              <h3 style="text-align: center" ><a href="showSingleProject-{{ project.id }}">{{ project.title }}</a></h3>
              <h6   style="text-align: center" >{{ project.city }}</h6>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}