{% extends "front_layout.twig" %}
{% block head %}
    <title> Password dimenticata </title>
{% endblock %}

{% block content %}
    <div class="site-section">
        <div class="container">
            <div class="row  mb-5">
                <div class="col-md-7">
                    <form method="POST" action="recoveryPassword">
                        <input type="email" name="email">
                        <input type="submit" value="Invia la mail per ripristinare la password">
                    </form>


                </div>
            </div>
        </div>
    </div>
    {% if error is defined %}

        <div style="color: red; background-color: #F6CECE; width: 300px; border-radius: 10px; margin: auto">  {{error}} </div>

    {% endif %}
    {% if success is defined %}

        <div style="color: white; background-color: green; width: 300px; border-radius: 10px; margin:auto">  {{success}} </div>

    {% endif %}
{% endblock %}
